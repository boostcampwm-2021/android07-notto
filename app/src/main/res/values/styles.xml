<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_label_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_x_small</item>
        <item name="android:textSize">@dimen/text_median</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edit_label_dialog_cancel_ok_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_x_large</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edit_label_dialog_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/space_small</item>
        <item name="android:paddingEnd">@dimen/space_small</item>
        <item name="android:paddingTop">@dimen/space_x_small</item>
        <item name="android:paddingBottom">@dimen/space_median</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="text_edit_todo_field" parent="Theme.Notto.TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/space_x_small</item>
        <item name="android:paddingBottom">@dimen/space_x_small</item>
    </style>

    <style name="text_edit_todo_value" parent="Theme.Notto.TextDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/space_x_small</item>
        <item name="android:paddingBottom">@dimen/space_x_small</item>
    </style>

    <style name="text_color_black">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
