<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.Notto"></style>
    <!-- Base application theme. -->
    <style name="Theme.Notto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_normal</item>
        <item name="colorPrimaryVariant">@color/yellow_deep</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_deep</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="fontFamily">@font/font_nanumsquare</item>
    </style>

    <style name="Theme.Notto.TextDefault" parent="Theme.Notto">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Notto.TextContent" parent="Theme.Notto">
        <item name="android:textColor">@color/charcoal_normal</item>
    </style>

    <style name="Theme.Notto.TextSecondary" parent="Theme.Notto">
        <item name="android:textColor">@color/blue_deep</item>
    </style>

    <style name="Theme.Notto.TextGray" parent="Theme.Notto">
        <item name="android:textColor">@color/gray_deep</item>
    </style>

    <style name="Theme.Notto.TextDisabled" parent="Theme.Notto">
        <item name="android:textColor">@color/gray_normal</item>
    </style>

    <style name="Theme.Notto.Icon" parent="Theme.Notto">
        <item name="tint">@color/black</item>
    </style>

    <style name="Theme.Notto.BottomNav" parent="Theme.Notto">
        <item name="itemIconTint">@color/bg_bottom_normal</item>
        <item name="itemTextColor">@color/bg_bottom_normal</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/yellow_light</item>
        <item name="colorSecondary">@color/yellow_deep</item>
    </style>

    <style name="TodoSetTimeDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:timePickerDialogTheme">@style/TodoTimePickerDialogStyle</item>
    </style>

    <style name="TodoTimePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">@color/yellow_normal</item>
    </style>

    <style name="TodoTimePickerWidgetStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/white</item>
        <item name="android:numbersSelectorColor">@color/yellow_deep</item>
        <item name="android:numbersBackgroundColor">@color/gray_light</item>
    </style>

    <style name="Theme.Notto.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@null</item>
        <item name="titleTextColor">@color/black</item>
        <item name="titleCentered">true</item>
        <item name="navigationIconTint">@color/black</item>
    </style>

    <style name="Theme.Notto.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/yellow_deep</item>
        <item name="colorSecondary">@color/blue_deep</item>
        <item name="fontFamily">@font/font_nanumsquare</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
