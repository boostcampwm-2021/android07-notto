<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_normal</item>
        <item name="colorPrimaryVariant">@color/yellow_deep</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_deep</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Notto.TextDefault" parent="Theme.Notto">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Notto.TextContent" parent="Theme.Notto">
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="Theme.Notto.TextSecondary" parent="Theme.Notto">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="Theme.Notto.TextGray" parent="Theme.Notto">
        <item name="android:textColor">@color/gray_normal</item>
    </style>

    <style name="Theme.Notto.TextDisabled" parent="Theme.Notto">
        <item name="android:textColor">@color/gray_deep</item>
    </style>

    <style name="Theme.Notto.Icon" parent="Theme.Notto">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.Notto.BottomNav" parent="Theme.Notto">
        <item name="itemIconTint">@color/bg_bottom_night</item>
        <item name="itemTextColor">@color/bg_bottom_night</item>
    </style>

    <style name="Theme.Notto.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@null</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleCentered">true</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="Theme.Notto.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TodoTimePickerWidgetStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">?attr/colorSurface</item>
        <item name="android:numbersSelectorColor">@color/yellow_deep</item>
        <item name="android:numbersBackgroundColor">@color/charcoal_normal</item>
    </style>

    <style name="LicenseTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/yellow_deep</item>
        <item name="colorSecondary">@color/blue_light</item>
        <item name="fontFamily">@font/font_nanumsquare</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>
